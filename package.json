{
  "name": "types-cleanup",
  "displayName": "Types Cleanup ðŸ§¹",
  "description": "Automatically organize, deduplicate, and clean up TypeScript interfaces in Types.d.ts",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onCommand:typesCleanup.toggleCollapse",
    "onCommand:typesCleanup.jumpToType"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "types-cleanup.toggle",
        "title": "Toggle Types Cleanup",
        "category": "Types Cleanup"
      },
      {
        "command": "types-cleanup.cleanup-now",
        "title": "Cleanup Types Now",
        "category": "Types Cleanup"
      },
      {
        "command": "types-cleanup.show-menu",
        "title": "Show Types Cleanup Menu",
        "category": "Types Cleanup"
      },
      {
        "command": "types-cleanup.test-extraction",
        "title": "Test Type Extraction",
        "category": "Types Cleanup"
      },
      {
        "command": "types-cleanup.reset-stats",
        "title": "Reset Statistics",
        "category": "Types Cleanup"
      },
      {
        "command": "typesCleanup.toggleCollapse",
        "title": "Types Cleanup: Toggle Collapse in File"
      },
      {
        "command": "typesCleanup.jumpToType",
        "title": "Types Cleanup: Jump to Type"
      }
    ],
    "configuration": {
      "title": "Types Cleanup",
      "properties": {
        "typesCleanup.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic types cleanup on file save"
        },
        "typesCleanup.typesFileName": {
          "type": "string",
          "default": "Types.d.ts",
          "description": "Name of the types file to manage (can include relative path like 'types/Types.d.ts')"
        },
        "typesCleanup.cleanupDelay": {
          "type": "number",
          "default": 2000,
          "description": "Delay in milliseconds before cleaning up unused interfaces"
        },
        "typesCleanup.enableAutoCleanup": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic cleanup of unused interfaces (disable if experiencing performance issues)"
        },
        "typesCleanup.autoCollapse.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Auto-collapse type/interface blocks on open."
        },
        "typesCleanup.autoCollapse.onlyPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "*Props",
            "*State"
          ],
          "description": "Only collapse names matching these glob-like patterns."
        },
        "typesCleanup.output": {
          "type": "object",
          "default": {
            "default": "src/types/types.d.ts",
            "rules": []
          },
          "description": "Route extracted types to different files based on file globs."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "micromatch": "^4.0.7"
  }
}